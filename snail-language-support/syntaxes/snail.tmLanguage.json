{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Snail",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#classes"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#features"
		},
		{
			"include": "#expressions"
		},
		{
			"include": "#blocks"
		}
	],
	"repository": {
		"classes": {
			"patterns": [
				{
					"match": "(class)\\s([a-zA-z_0-9]+)\\s(:\\s[a-zA-z_0-9]+)?\\s",
					"captures": {
						"1": { "name": "storage.type.class.snail"},
						"2": { "name": "entity.name.class.snail"}
					}
				}
			]
		},
		"features": {
			"patterns": [
				{
					"begin": "\\b([a-zA-Z_0-9]+)\\b\\(",
					"beginCaptures": {
						"1": { "name": "entity.name.method.snail"}
					},
					"patterns": [
						{
							"name": "variable.parameter.snail",
							"match": "[a-zA-z_0-9]+"
						},
						{
							"include": "$self"
						}
					],
					"end": "\\)"
				},
				{
					"begin": "\\b(let)\\s([a-zA-Z_0-9]+)\\b(=)?\\b",
					"beginCaptures": {
						"1": { "name": "storage.type.variable.snail"},
						"2": { "name": "variable.name.other.snail"}
					},
					"patterns": [
						{
							"include": "$self"
						}
					],
					"end": ";"
				}
			]
		},
		"expressions": {
			"patterns": [
				{
					"begin": "\\b([a-zA-Z_0-9]+)\\b\\(",
					"beginCaptures": {
						"1": { "name": "entity.name.function.snail"}
					},
					"patterns": [
						{
							"include": "$self"
						}
					],
					"end": "\\);"
				},
				{
					"begin": "\\(",
					"patterns": [
						{
							"include": "$self"
						}
					],
					"end": "\\)"
				},
				{
					"begin": "([a-zA-z_0-9]+)\\[",
					"beginCaptures": {
						"1": { "name": "variable.other.snail" }
					},
					"patterns": [
						{
							"include": "$self"
						}
					],
					"end": "\\]"
				},
				{
					"name": "constant.numeric.snail",
					"match": "\\b[0-9]+[.]?[0-9]*\\b"
				},
				{
					"name": "variable.other.snail",
					"match": "\\b[a-zA-z_0-9]+\\b"
				},
				{
					"name": "string.quoted.double.snail",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.snail",
							"match": "\\\\(n|t)"
						}
					]
				}
		]
		},
		"keywords": {
			"patterns": [
			{
				"name": "keyword.control.snail",
				"match": "\\b(?i)(if|else|while|for|new)\\b"
			},
			{
				"name": "constant.language.snail",
				"match": "\\b(?i)(true|false|isvoid)\\b"
			},
			{
				"name": "storage.type.class.snail",
				"match": "\\b(?i)(class)\\b"
			},
			{
				"name": "storage.type.binding.snail",
				"match": "\\b(?i)(let)\\b"
			}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.snail",
					"match": "\/\/.*"
				},
				{
					"name": "comment.block.snail",
					"begin": "\/[*]",
					"end": "[*]\/",
					"patterns": [
						{
							"include": "#comments"
						}
				]
			}]
		},
		"blocks": {
			"begin": "{",
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#blocks"
				},
				{
					"include": "#expressions"
				}],
			"end": "}"
		}
	},
	"scopeName": "source.sl"
}